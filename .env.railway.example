APP_NAME=PerawatRS
APP_ENV=production
APP_DEBUG=false
APP_URL=https://ganti-nama-project.up.railway.app
APP_TIMEZONE=Asia/Jakarta

# Akan di-generate otomatis oleh script jika kosong
APP_KEY=

LOG_CHANNEL=stack
LOG_LEVEL=info

# Database (sesuaikan dengan Railway - MySQL atau PostgreSQL)
DB_CONNECTION=mysql
DB_HOST=
DB_PORT=3306
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=
# Jika pakai PostgreSQL ubah:
# DB_CONNECTION=pgsql
# DB_PORT=5432

# Cache & Session
CACHE_STORE=file
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
QUEUE_CONNECTION=database
FILESYSTEM_DISK=public

# Mail (Production atau Mailtrap untuk testing)
MAIL_MAILER=smtp
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@rsdolopo.test
MAIL_FROM_NAME="RS Dolopo"

# Feature Flags
SEED_ON_BOOT=false
RUN_QUEUE=false

# Tambahkan variabel lain jika diperlukan
